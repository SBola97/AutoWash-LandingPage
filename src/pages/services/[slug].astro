---
import "../../styles/global.css";
import Layout from "../../layouts/Layout.astro";
import { services } from "../../data/services";

export async function getStaticPaths() {
  return services.map((service) => ({
    params: { slug: service.slug },
    props: { service },
  }));
}

const { service } = Astro.props;
---

<Layout>
  <main class="min-h-screen py-12 px-4">
    <div class="max-w-6xl mx-auto">
      <section class="mb-16 rounded-lg shadow-lg p-8">
        <a
          href="/services"
          class="absolute top-30 left-8 text-4xl border-2 border-gray-300 rounded-2xl w-16 h-8 flex items-center justify-center hover:bg-green-600 transition-colors"
          aria-label="Regreso a servicios"
        >
          &larr;
        </a>
        <h2 class="text-3xl text-center font-bold mb-4">
          {service.title}
        </h2>
        <div class="grid grid-cols-1 gap-8 mb-8 place-items-center">
          <div class="overflow-hidden rounded-lg">
            <img
              src={service.image}
              alt={service.alt}
              class="w-full h-80 object-cover hover:scale-105 transition-transform"
            />
            <p class="text-lg text-center mt-8">{service.description}</p>
          </div>
        </div>
      </section>
    </div>
  </main>
</Layout>

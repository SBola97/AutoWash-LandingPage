---
import "../../styles/global.css";
import Layout from "../../layouts/Layout.astro";
import { services } from "../../data/services";

export async function getStaticPaths() {
  return services.map((service) => ({
    params: { slug: service.slug },
    props: { service },
  }));
}

const { service } = Astro.props;
---

<Layout>
  <main class="min-h-screen py-12 px-4">
    <div class="max-w-6xl mx-auto">
      <section class="mb-16 rounded-lg shadow-xl p-8">
        <a
          href="/services"
          class="absolute top-28 left-6 z-50 flex items-center gap-2 text-sm font-semibold px-4 py-2 rounded-xl border border-gray-600 bg-[#13151a]/80 backdrop-blur hover:bg-green-600 hover:border-green-500 transition-all"
          aria-label="Volver a servicios"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="w-5 h-5"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M15 19l-7-7 7-7"></path>
          </svg>
          Volver a servicios
        </a>
        <h2 class="text-3xl text-center font-bold mb-4">
          {service.title}
        </h2>
        <div class="grid grid-cols-1 gap-8 mb-8 place-items-center">
          <div class="overflow-hidden rounded-lg">
            <img
              src={service.image}
              alt={service.alt}
              class="w-200 h-80 mx-auto object-cover hover:scale-105 transition-transform"
            />
            <p class="text-lg text-center mt-8">{service.description}</p>
            <ul
              class="mt-6 max-w-xl mx-auto space-y-3 text-left text-gray-300 p-6 rounded-xl border border-white/10"
            >
              {
                service.features.map((feature) => (
                  <li class="flex items-center gap-2">
                    <span class="text-green-400 text-lg">âœ”</span>
                    <span>{feature}</span>
                  </li>
                ))
              }
            </ul>
          </div>
        </div>
      </section>
    </div>
  </main>
</Layout>
